{
	"name": "@coderebus/design-system",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"clean": "nx run-many -t clean",
		"test": "jest",
		"storybook": "storybook dev -p 6006",
		"sbtcv": "run-p tcv storybook",
		"generate": "npx hygen plop template",
		"build:storybook": "storybook build -o ./dist && pnpm build:tcv",
		"tcv": "npx tailwind-config-viewer -o -c tailwind.config.cjs",
		"build:tcv": "mkdirp ./dist/tcv && npx tailwind-config-viewer -c tailwind.config.cjs export ./dist/tcv",
		"build": "nx run-many -t build",
		"release:d": "nx release -d",
		"release": "nx release",
		"test:coverage": "jest --coverage",
		"lint": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings=20",
		"lint:fix": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings=20 --fix --cache",
		"lint-css": "stylelint '**/*.{css,scss}' --fix",
		"lint-staged": "npx lint-staged",
		"prettify": "prettier --ignore-path .gitignore --write \"**/*.(js|jsx|ts|tsx)\"",
		"format": "npm run lint:fix && npm run lint-css && npm run prettify",
		"prepare": "husky",
		"commit": "git-cz",
		"chromatic": "npx chromatic --project-token=<CHROMATIC_PROJECT_TOKEN> --storybook-build-dir dist"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
